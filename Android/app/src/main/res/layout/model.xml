<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:layout_centerHorizontal="true"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="2dp"
    card_view:cardMaxElevation="1dp"
    android:layout_height="180dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/teacherImageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:padding="5dp"
            android:src="@drawable/placeholder" />

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="-1dp"
            android:layout_toEndOf="@+id/teacherImageView"
            android:layout_toRightOf="@+id/teacherImageView"
            android:padding="5dp"
            android:text="Teacher Name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/longi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameTextView"
            android:layout_alignStart="@+id/descriptionTextView"
            android:layout_alignParentTop="true"
            android:layout_marginStart="96dp"
            android:layout_marginLeft="96dp"
            android:layout_marginTop="90dp"
            android:layout_toRightOf="@+id/teacherImageView"
            android:padding="5dp"
            android:text=" Latitude "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/latTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameTextView"
            android:layout_alignStart="@+id/descriptionTextView"
            android:layout_alignParentTop="true"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="90dp"
            android:layout_toRightOf="@+id/teacherImageView"
            android:padding="5dp"
            android:text=" Latitude "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/lonTextView"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/latTextView"
            android:layout_marginLeft="86dp"
            android:layout_marginTop="20dp"
            android:textAlignment="textEnd"
            android:layout_toRightOf="@+id/teacherImageView"
            android:padding="5dp"
            android:text="Longitude"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/teacherImageView"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="99dp"
            android:layout_toEndOf="@+id/teacherImageView"
            android:layout_toRightOf="@+id/teacherImageView"
            android:padding="5dp"
            android:text="Teacher Description..."
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>