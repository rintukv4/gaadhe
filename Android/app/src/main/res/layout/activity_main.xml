<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >




    <Button
        android:layout_width="210dp"
        android:layout_height="100dp"
        android:background="@drawable/signupbtn"
        android:layout_marginTop="510dp"
        android:id="@+id/out"
        android:layout_marginLeft="5dp"/>

    <Button
        android:layout_width="210dp"
        android:layout_height="100dp"
        android:id="@+id/signin"
        android:layout_marginTop="510dp"
        android:background="@drawable/loginbtn"
        android:layout_toEndOf="@+id/out"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_marginTop="-270dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:src="@drawable/bgup"/>

    <EditText
        android:layout_width="350dp"
        android:id="@+id/name"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"/>

    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:id="@+id/pass"
        android:inputType="textPassword"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/white"
        android:layout_marginTop="35dp"/>
    <ImageView
        android:layout_width="150dp"
        android:layout_marginTop="20dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logowhite"/>
    <ImageView
        android:layout_width="150dp"
        android:id="@+id/loginwith"
        android:layout_marginTop="600dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/loginwith"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="15dp"
        android:id="@+id/forgotp"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_below="@+id/loginwith"
        android:background="@drawable/forgotpassword"/>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="403dp"
        android:layout_marginBottom="296dp"
        android:buttonTint="#F6F0F0"
        android:text="Keep Me Logged In" />


</RelativeLayout>