            android:background="@drawable/roundg" />

        <TextView
            android:id="@+id/lonTextView"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/latTextView"
            android:layout_marginLeft="101dp"
            android:layout_marginTop="38dp"
            android:layout_toRightOf="@+id/teacherImageView"
            android:padding="5dp"
            android:text="Longitude"
            android:textAlignment="textEnd"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/teacherImageView"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="106dp"
            android:layout_toEndOf="@+id/teacherImageView"
            android:layout_toRightOf="@+id/teacherImageView"
            android:padding="5dp"
            android:text="Teacher Description..."
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

